<GuiXml>
	<Controls>
		<!-- CSPM Radical Menu Base Template -->
		<!-- NOTE : This template is based on ZO_RadialMenuBaseTemplate by ZOS, with its own size adjustments for the UI design of the CShortcutPieMenu add-on. -->
		<Control name="CSPM_RadialMenuBaseTemplate" hidden="true" virtual="true">
			<Dimensions x="350" y="350" />
			<Anchor point="CENTER" relativeTo="GuiRoot"/>

			<Controls>
				<Texture name="$(parent)SelectedBackground" layer="BACKGROUND" level="4" textureFile="EsoUI/Art/HUD/radialMenu_bg.dds">
					<Dimensions x="575" y="575" />
					<Anchor point="CENTER" />
				</Texture>

				<Texture name="$(parent)UnselectedBackground" layer="BACKGROUND" level="3" textureFile="EsoUI/Art/HUD/radialMenu_bg_unselected.dds" hidden="true">
					<Dimensions x="575" y="575" />
					<Anchor point="CENTER" />
				</Texture>

				<Texture name="$(parent)TrackQuickslot" layer="BACKGROUND" level="2" textureFile="EsoUI/Art/Quickslots/quickslot_mapping_bg.dds" alpha="0" hidden="false">
					<Dimensions x="575" y="575" />
					<Anchor point="CENTER" />
				</Texture>

				<Texture name="$(parent)TrackGamepad" layer="BACKGROUND" level="2" textureFile="EsoUI/Art/HUD/Gamepad/gp_radialMenu_track.dds" alpha="0" hidden="false">
					<Dimensions x="700" y="700" />
					<Anchor point="CENTER" />
				</Texture>

				<Texture name="$(parent)Underlay" color="000000" layer="BACKGROUND" level="0" alpha="0.75" excludeFromResizeToFitExtents="true" inheritScale="false" mouseEnabled="true" hidden="true">
					<Anchor point="TOPLEFT" relativeTo="GuiRoot"/>
					<Anchor point="BOTTOMRIGHT" relativeTo="GuiRoot"/>
				</Texture>

				<Texture name="$(parent)Overlay" color="000000" layer="OVERLAY" level="1000" tier="HIGH" alpha="0" excludeFromResizeToFitExtents="true" inheritScale="false" mouseEnabled="true" keyboardEnabled="true" hidden="false">
					<Anchor point="TOPLEFT" relativeTo="GuiRoot"/>
					<Anchor point="BOTTOMRIGHT" relativeTo="GuiRoot"/>
				</Texture>
			</Controls>
		</Control>

		<!-- CSPM Radical Menu Template -->
		<!-- NOTE : This template is based on ZO_RadialMenuTemplate by ZOS, with its own extensions and size adjustment to fit the UI design of the CShortcutPieMenu add-on. -->
		<Control name="CSPM_RadialMenuTemplate" inherits="CSPM_RadialMenuBaseTemplate" hidden="true" virtual="true">
			<Controls>
				<Label name="$(parent)Action" font="ZoFontHeader3" horizontalAlignment="CENTER" verticalAlignment="CENTER" inheritScale="false">
					<Dimensions x="250" y="250" />
					<Anchor point="CENTER"/>
				</Label>

				<Label name="$(parent)PresetName" font="ZoFontHeader4" horizontalAlignment="CENTER" verticalAlignment="CENTER" pixelRoundingEnabled="true" inheritScale="false">
					<Dimensions x="600" y="70" />
					<Anchor point="TOP" relativePoint="BOTTOM" offsetY="75"/>
				</Label>
			</Controls>
		</Control>
	</Controls>

	<Animations>
		<!-- CSPM Radial Menu Animation Template -->
		<!-- NOTE : This template is based on DefaultRadialMenuAnimation by ZOS, with its own extensions and size adjustment to fit the UI design of the CShortcutPieMenu add-on. -->
		<AnimationTimeline name="CSPM_RadialMenuAnimation" inherits="DefaultRadialMenuAnimation">
			<Animations>
				<AlphaAnimation duration="100" startAlpha="0.0" endAlpha="1.0"/>
				<ScaleAnimation duration="100" startScale="0.2" endScale="1.0"/>
			</Animations>
		</AnimationTimeline>
	</Animations>

	<Controls>
		<!-- CSPM Radical Menu Entry Template -->
		<!-- NOTE : This template is based on ZO_SelectableItemRadialMenuEntryTemplate by ZOS, with its own extensions and size adjustment to fit the UI design of the CShortcutPieMenu add-on. -->
		<Control name="CSPM_SelectableItemRadialMenuEntryTemplate" scale="0.75" virtual="true" mouseEnabled="true">
			<Dimensions x="64" y="64"/>
			<OnInitialized>
				CSPM_SelectableItemRadialMenuEntryTemplate_OnInitialized(self)
			</OnInitialized>
			<Controls>
				<Backdrop name="$(parent)Frame" inherits="ZO_GamepadAbilityIconFrame" alpha="0.7">
					<Anchor point="TOPLEFT" offsetX="-8" offsetY="-8"/>
					<Anchor point="BOTTOMRIGHT" offsetX="8" offsetY="8"/>
				</Backdrop>

				<Label name="$(parent)StatusText" tier="HIGH" font="ZoFontGameShadow" horizontalAlignment="RIGHT" verticalAlignment="TOP" inheritScale="false">
					<Anchor point="TOPRIGHT" relativePoint="TOPLEFT" offsetX="4" offsetY="-8"/>
				</Label>

				<Label name="$(parent)CountText" tier="HIGH" font="ZoFontGameShadow" horizontalAlignment="RIGHT" inheritScale="true">
					<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" offsetX="4" offsetY="6"/>
				</Label>

				<Texture name="$(parent)Glow" tier="LOW" textureFile="EsoUI/Art/Quickslots/quickslot_highlight_blob.dds" alpha="0">
					<Dimensions x="128" y="128"/>
					<Anchor point="CENTER"/>
				</Texture>

				<Texture name="$(parent)Icon" tier="MEDIUM" resizeToFitFile="false">
					<Dimensions x="64" y="64"/>
					<Anchor point="CENTER"/>
				</Texture>

				<Cooldown name="$(parent)Cooldown" tier="HIGH" leadingEdgeTexture="EsoUI/Art/ActionBar/Gamepad/gp_QuickslotFill.dds" fillColor="000000" alpha=".85" hidden="true">
					<AnchorFill/>
				</Cooldown>

				<Label name="$(parent)Label" tier="HIGH" font="ZoFontChat" horizontalAlignment="CENTER" inheritScale="false">
					<Anchor point="TOP" relativePoint="BOTTOM" offsetY="5" />
				</Label>
				<Control name="$(parent)Padding" inheritScale="false" hidden="true">
				</Control>
			</Controls>
		</Control>
	</Controls>
</GuiXml>
