<GuiXml>
	<Controls>
		<!-- CSPM Radical Menu Base Template -->
		<Control name="CSPM_RadialMenuBaseTemplate" hidden="true" virtual="true">
			<Dimensions x="350" y="350" />
			<Anchor point="CENTER" relativeTo="GuiRoot"/>

			<Controls>
				<Texture name="$(parent)SelectedBackground" textureFile="EsoUI/Art/HUD/radialMenu_bg.dds">
					<Dimensions x="575" y="575" />
					<Anchor point="CENTER" />
				</Texture>

				<Texture name="$(parent)UnselectedBackground" textureFile="EsoUI/Art/HUD/radialMenu_bg_unselected.dds" hidden="true">
					<Dimensions x="575" y="575" />
					<Anchor point="CENTER" />
				</Texture>

				<Texture name="$(parent)TrackQuickslot" textureFile="EsoUI/Art/Quickslots/quickslot_mapping_bg.dds" alpha="0" hidden="false">
					<Dimensions x="575" y="575" />
					<Anchor point="CENTER" />
				</Texture>

				<Texture name="$(parent)TrackGamepad" textureFile="EsoUI/Art/HUD/Gamepad/gp_radialMenu_track.dds" alpha="0" hidden="false">
					<Dimensions x="700" y="700" />
					<Anchor point="CENTER" />
				</Texture>
			</Controls>
		</Control>

		<!-- CSPM Radical Menu Template -->
		<Control name="CSPM_RadialMenuTemplate" inherits="CSPM_RadialMenuBaseTemplate" hidden="true" virtual="true">
			<Controls>
				<Label name="$(parent)Action" font="ZoFontHeader3" horizontalAlignment="CENTER" verticalAlignment="CENTER" inheritScale="false">
					<Dimensions x="250" y="250" />
					<Anchor point="CENTER"/>
				</Label>

				<Label name="$(parent)PresetName" font="ZoFontHeader4" horizontalAlignment="CENTER" verticalAlignment="CENTER" pixelRoundingEnabled="true" inheritScale="false">
					<Dimensions x="500" y="50" />
					<Anchor point="TOP" relativePoint="BOTTOM" offsetY="75"/>
				</Label>
			</Controls>
		</Control>

		<!-- CSPM Radical Menu Entry Template -->
		<Control name="CSPM_SelectableItemRadialMenuEntryTemplate" scale=".75" virtual="true">
			<Dimensions x="64" y="64"/>
			<OnInitialized>
				CSPM_SelectableItemRadialMenuEntryTemplate_OnInitialized(self)
			</OnInitialized>
			<Controls>
				<Backdrop name="$(parent)Frame" inherits="ZO_GamepadAbilityIconFrame" alpha="0.7">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Icon" offsetX="-8" offsetY="-8"/>
					<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)Icon" offsetX="8" offsetY="8"/>
				</Backdrop>

				<Label name="$(parent)StatusText" tier="HIGH" font="ZoFontGameShadow" horizontalAlignment="RIGHT" verticalAlignment="TOP" inheritScale="false">
					<Anchor point="TOPRIGHT" relativeTo="$(parent)Icon" relativePoint="TOPLEFT" offsetX="4" offsetY="-8"/>
				</Label>

				<Label name="$(parent)CountText" tier="HIGH" font="ZoFontGameShadow" horizontalAlignment="RIGHT" inheritScale="true">
					<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)Icon" relativePoint="BOTTOMRIGHT" offsetX="4" offsetY="6"/>
				</Label>

				<Texture name="$(parent)Glow" tier ="LOW" textureFile="EsoUI/Art/Quickslots/quickslot_highlight_blob.dds" alpha="0">
					<Dimensions x="128" y="128"/>
					<Anchor point="CENTER"/>
				</Texture>

				<Texture name="$(parent)Icon" tier ="MEDIUM">
					<AnchorFill/>
				</Texture>

				<Label name="$(parent)Label" tier="HIGH" font="ZoFontChat" horizontalAlignment="CENTER" inheritScale="false">
					<Anchor point="TOP" relativeto="$(parent)Icon" relativePoint="BOTTOM" offsetY="5" />
				</Label>
			</Controls>
		</Control>

		<!-- CSPM Radical Menu : Root Menu -->
		<TopLevelControl name="CSPM_UI_Root_Pie" allowBringToTop="true">
			<AnchorFill/>
			<Controls>
				<Control name="$(parent)Menu" inherits="CSPM_RadialMenuTemplate" hidden="true" />
			</Controls>
		</TopLevelControl>
	</Controls>
</GuiXml>